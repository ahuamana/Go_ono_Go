<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/redDark"
    android:layout_height="match_parent"
    tools:context=".Activities.RegisterActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/btnBack_Register"
            android:layout_width="30dp"
            android:src="@mipmap/ic_button_back"
            android:layout_height="30dp"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_logo" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="40dp"
                android:elevation="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="35dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="Registro"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/background_gray_rounded"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_person"></ImageView>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtFullName_Register"
                            android:layout_width="0dp"
                            android:layout_marginLeft="10dp"
                            android:hint="Nombre Completo"
                            android:textSize="12dp"
                            android:textColor="@color/redDark"
                            android:background="@null"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/background_gray_rounded"
                        android:orientation="horizontal">



                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtDateTime_Register"
                            android:layout_width="0dp"
                            android:layout_marginLeft="10dp"
                            android:hint="Fecha"
                            android:textSize="12dp"
                            android:textColor="@color/redDark"
                            android:background="@null"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/idCalendar_Register"
                            android:layout_width="25dp"
                            android:background="@drawable/ic_calendar"
                            android:layout_height="25dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/background_gray_rounded"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_email"></ImageView>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtEmail_Register"
                            android:layout_width="0dp"
                            android:inputType="textWebPassword"
                            android:layout_marginLeft="10dp"
                            android:hint="Correo Institucional"
                            android:textSize="12dp"
                            android:textColor="@color/redDark"
                            android:background="@null"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/background_gray_rounded"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_password"></ImageView>

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtPassword_Register"
                            android:layout_width="0dp"
                            android:inputType="textWebPassword"
                            android:layout_marginLeft="10dp"
                            android:hint="ContraseÃ±a"
                            android:textSize="12dp"
                            android:textColor="@color/redDark"
                            android:background="@null"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"/>



                    </LinearLayout>


                    <Button
                        android:id="@+id/btnAcceder_Register"
                        android:layout_width="match_parent"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/white"
                        android:background="@drawable/ic_button_rounded_red"
                        android:layout_height="35dp"
                        android:fontFamily="sans-serif-condensed"
                        android:textAllCaps="false"
                        android:text="Acceder"/>





                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>



</androidx.coordinatorlayout.widget.CoordinatorLayout>